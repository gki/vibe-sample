    "eslint": "^9.39.0",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.26",
    "@hono/graphql-server": "^0.7.0",
